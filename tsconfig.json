{
  "extends": "./.tsconfig.json",
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "paths": {
      "utils/*": ["./src/utils/*"],
      "pages/*": ["./src/pages/*"],
      "components/*": ["./src/components/*"],
      "stores/*": ["./src/stores/*"]
    }
  },
  "include": ["src"]
}
